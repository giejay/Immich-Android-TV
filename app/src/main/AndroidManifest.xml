<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Access internet-based media -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Donation -->
    <uses-permission android:name="com.android.vending.BILLING" />

    <!-- For writing to home screen channels -->
    <uses-permission android:name="com.android.providers.tv.permission.WRITE_EPG_DATA" />

    <uses-permission android:name="com.google.android.gms.permission.AD_ID" tools:node="remove"/>

    <!-- Touch screen is not required -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <!-- This is an Android TV app only (not intended for mobile) -->
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:name="nl.giejay.android.tv.immich.ImmichApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/icon"
        android:usesCleartextTraffic="true"
        android:banner="@mipmap/icon_banner"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name="nl.giejay.android.tv.immich.playback.ScreenSaverService"
            android:exported="true"
            android:label="Immich"
            android:permission="android.permission.BIND_DREAM_SERVICE">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.service.dreams.DreamService" />
            </intent-filter>

            <!-- Point to additional information for this dream (optional) -->
            <meta-data
                android:name="android.service.dream"
                android:resource="@xml/screensaver" />
        </service>

        <service android:name="nl.giejay.android.tv.immich.playback.MediaService"
            android:label="Enable media controls"
            android:exported="false"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="keyboard|keyboardHidden|navigation">

            <!-- Used as the main entry point from the leanback launcher -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>

            <!-- IntentFilter for handling deep links from the ATV home screen or Assistant -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:host="atv-reference-app.firebaseapp.com" />
                <data android:scheme="https" />
                <data android:pathPattern=".*" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.google.android.gms.cast.tv.action.LAUNCH" />
                <action android:name="com.google.android.gms.cast.tv.action.LOAD"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <!-- BroadcastReceiver for setting up the home screen channel -->
<!--        <receiver-->
<!--            android:name="nl.giejay.android.tv.immich.homescreenchannels.HomeScreenChannelReceiver"-->
<!--            android:exported="true">-->
<!--            <intent-filter>-->
<!--                <action android:name="android.media.tv.action.INITIALIZE_PROGRAMS" />-->
<!--                <category android:name="android.intent.category.DEFAULT" />-->
<!--            </intent-filter>-->
<!--        </receiver>-->

        <!--
         ~ Options provider class for Cast Connect when CastReceiverContext
         ~ is initialised. More information can be found at -
         ~ https://developers.google.com/cast/docs/android_tv_receiver/core_features#specify_receiver_options_provider
        -->
        <meta-data
            android:name="com.google.android.gms.cast.tv.RECEIVER_OPTIONS_PROVIDER_CLASS_NAME"
            android:value="nl.giejay.android.tv.immich.castconnect.CastReceiverOptionsProvider" />

    </application>

</manifest>